            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ user.gender }}</td>
            </tr>
            <tr>
                <th>Pronoun</th>
                <td>{{ user.pronoun }}</td>
            </tr>
            <tr>
                <th>Dob</th>
                <td>{{ user.dob ? user.dob|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>FirstMail</th>
                <td>{{ user.firstMail }}</td>
            </tr>
            <tr>
                <th>SecondMail</th>
                <td>{{ user.secondMail }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ user.adress }}</td>
            </tr>
            <tr>
                <th>Zip</th>
                <td>{{ user.zip }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>MemberStatus</th>
                <td>{{ user.memberStatus }}</td>
            </tr>
            <tr>
                <th>Ca</th>
                <td>{{ user.ca ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ShirtSize</th>
                <td>{{ user.shirtSize }}</td>
            </tr>
            <tr>
                <th>FavColor</th>
                <td>{{ user.favColor }}</td>
            </tr>
            <tr>
                <th>FavGames</th>
                <td>{{ user.favGames }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ user.comments }}</td>
