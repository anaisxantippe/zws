<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="https://i.ibb.co/C5vBpJw/9.png">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="/base.css"></link>
        <link rel="stylesheet" type="text/css" href="/nav.css"></link>
        <link rel="stylesheet" type="text/css" href="/index.css"></link>
        <link rel="stylesheet" type="text/css" href="/dashboard.css"></link>
        <link href="https://fonts.googleapis.com/css2?family=Exo:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
<main class="main-index">
    <!-- ------------------------------- TITLE -------------------------------- -->
    <div class="logo-title">
        <img src="/images/white_logo.png" alt="logo" id="logo">
        <h1 id="title">Bonjour Zephyrien !</h1>
    </div>

    <br>
    <h2 id="subtitle">Connecte toi pour accèder à ton panel :</h2>

    <!-- --------------------------- CONNECTION BOX --------------------------- -->
    <div class="outest-box">
    <div class="inner-box">
    <form method="post">

    {% if app.user %}
        <div class="signin">
            Vous êtes déjà connecté {{ app.user.username }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
        </div>
    {% endif %}

    <div class="signin">
        <div class="signin-field">
            <label for="inputPseudo">Pseudo</label>
            <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control" autocomplete="username" required autofocus>
        </div>
            <div class="signin-field">
            <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <div class="signin-field">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        <div class="signin-field">
            <button class="btn btn-lg btn-primary" type="submit">
                Sign in
            </button>
        </div>
    </div>
</form>
    </div>
    </div>
</main>
    </body>
    <!-- ICONS -->
<script src="https://kit.fontawesome.com/94afbe7ce0.js" crossorigin="anonymous"></script>
<script src="https://unpkg.com/boxicons@2.0.9/dist/boxicons.js"></script>
</html>
