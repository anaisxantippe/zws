{% extends 'base.html.twig' %}
{% block body %}
<table>
  <tr>
    <th>Pseudo</th>
    <th>Password</th>
    <th>Autorisation</th>
  </tr>
  {% for user in users %}
  <tr>
    <td>{{ user.pseudo }}</td>
    <td>{{ user.password }}</td>
    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
    <td>
        <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
        <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
    </td>
  </tr>
  {% endfor %}
</table>
{% endblock %}